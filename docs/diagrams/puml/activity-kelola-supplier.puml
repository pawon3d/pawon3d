@startuml activity-kelola-supplier

title Activity Diagram: Kelola Supplier

start

:Pengguna mengakses halaman supplier;

:Sistem menampilkan daftar supplier;

if (Pilih aksi?) then (Tambah)
    :Tampilkan form tambah supplier;
    :Pengguna mengisi data identitas;
    :Pengguna mengisi data kontak;
    :Pengguna mengisi data alamat;
    :Upload gambar (opsional);
    
    if (Validasi data?) then (Valid)
        :Generate UUID;
        :Simpan data supplier;
        :Catat log aktivitas;
        :Tampilkan notifikasi sukses;
    else (Tidak Valid)
        :Tampilkan pesan error;
    endif
    
elseif (Ubah) then
    :Tampilkan form edit dengan data existing;
    :Pengguna mengubah data;
    
    if (Validasi data?) then (Valid)
        :Simpan perubahan;
        :Catat log aktivitas;
        :Tampilkan notifikasi sukses;
    else (Tidak Valid)
        :Tampilkan pesan error;
    endif
    
elseif (Cetak PDF) then
    :Sistem mengumpulkan data supplier;
    :Generate PDF dengan DomPDF;
    :Download file PDF;
    
else (Batal)
endif

:Refresh daftar supplier;

stop

@enduml
