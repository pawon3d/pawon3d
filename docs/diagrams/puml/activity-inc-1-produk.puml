@startuml

skinparam activityShape octagon

title Activity Diagram\nMengelola Produk & Komposisi

start
:Bagian Inventori mengakses halaman produk;
:Sistem menampilkan daftar produk;

if (Aksi?) then (Tambah Produk)
    :Mengisi form produk baru\n(nama, deskripsi, kategori, gambar);
    :Menentukan jumlah PCS;
    
    :Menambahkan komposisi bahan baku;
    repeat
        :Memilih bahan baku;
        :Menentukan satuan penggunaan;
        :Menentukan jumlah penggunaan;
        :Sistem menghitung harga per bahan;
    repeat while (Tambah bahan lain?) is (Ya)
    ->Tidak;
    
    if (Ada biaya lain?) then (Ya)
        repeat
            :Input nama dan jumlah biaya;
        repeat while (Tambah biaya lain?) is (Ya)
        ->Tidak;
    else (Tidak)
    endif
    
    :Sistem menghitung total modal;
    note right
        Modal = Total komposisi + Biaya lain
        Modal per PCS = Modal / Jumlah PCS
    end note
    
    :Input harga jual;
    :Pilih metode penjualan;
    :Status produk = Aktif;
else (Ubah Produk)
    :Memilih produk;
    :Mengubah data atau komposisi;
    :Sistem memperbarui data;
endif
stop

@enduml
