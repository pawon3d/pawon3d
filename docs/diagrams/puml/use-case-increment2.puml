@startuml use-case-increment2

skinparam actorStyle awesome
skinparam packageStyle rectangle
skinparam usecase {
    BackgroundColor White
    BorderColor Black
}

title Use Case Diagram - Increment 2: Fungsionalitas Pendukung

left to right direction

' Actors
actor "Admin" as admin
actor "Kasir" as cashier
actor "Bagian Inventori" as inventory
actor "Semua Pengguna" as alluser
actor "Pengguna Baru" as newuser

' System boundary
rectangle "Sistem Pawon3D - Increment 2" {
    
    ' User Management Package
    package "Pengguna & Peran" {
        usecase "Lihat Daftar Pekerja" as UC38
        usecase "Tambah Pekerja" as UC39
        usecase "Ubah Data Pekerja" as UC40
        usecase "Toggle Status Aktif" as UC41
        usecase "Kelola Peran" as UC42
        usecase "Aktivasi Akun" as UC43
    }
    
    ' Customer Package
    package "Pelanggan & Poin" {
        usecase "Lihat Daftar Pelanggan" as UC44
        usecase "Lihat Detail Pelanggan" as UC45
        usecase "Gunakan Poin" as UC46
        usecase "Lihat Riwayat Poin" as UC47
    }
    
    ' Stock Opname Package
    package "Stock Opname" {
        usecase "Lihat Rencana Hitung" as UC48
        usecase "Buat Rencana Hitung" as UC49
        usecase "Mulai Hitung Stok" as UC50
        usecase "Lihat Riwayat Hitung" as UC51
    }
    
    ' Dashboard & Reporting Package
    package "Dashboard & Laporan" {
        usecase "Lihat Ringkasan Umum" as UC52
        usecase "Lihat Laporan Kasir" as UC53
        usecase "Lihat Laporan Produksi" as UC54
        usecase "Lihat Laporan Inventori" as UC55
        usecase "Export Laporan PDF" as UC56
        usecase "Export Laporan Excel" as UC57
    }
    
    ' Notification Package
    package "Notifikasi & Log" {
        usecase "Lihat Notifikasi" as UC58
        usecase "Tandai Notifikasi Dibaca" as UC59
        usecase "Lihat Alur Persediaan" as UC60
    }
    
    ' Settings Package
    package "Pengaturan" {
        usecase "Kelola Profil Usaha" as UC61
        usecase "Kelola Metode Pembayaran" as UC62
        usecase "Ubah Profil Saya" as UC63
    }
}

' Admin connections
admin --> UC38
admin --> UC39
admin --> UC40
admin --> UC41
admin --> UC42
admin --> UC61
admin --> UC62

' New user connections
newuser --> UC43

' Cashier connections
cashier --> UC44
cashier --> UC45
cashier --> UC46
cashier --> UC47
cashier --> UC53

' Inventory connections
inventory --> UC48
inventory --> UC49
inventory --> UC50
inventory --> UC51
inventory --> UC55
inventory --> UC60

' All user connections
alluser --> UC52
alluser --> UC56
alluser --> UC57
alluser --> UC58
alluser --> UC59
alluser --> UC63

' Extend relationships
UC53 ..> UC56 : <<extend>>
UC53 ..> UC57 : <<extend>>
UC54 ..> UC56 : <<extend>>
UC54 ..> UC57 : <<extend>>
UC55 ..> UC56 : <<extend>>
UC55 ..> UC57 : <<extend>>

@enduml
